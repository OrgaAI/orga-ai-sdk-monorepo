{
    "extends": "../typescript-config/base.json",
    "compilerOptions": {
      "outDir": "./lib",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "target": "ES2020",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "jsx": "preserve"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib", "**/*.test.ts", "**/*.test.tsx"]
  }