{
  "name": "@orga-ai/core",
  "private": false,
  "version": "1.0.1",
  "description": "Framework-agnostic core for Orga AI SDK - real-time multimodal AI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.mjs",
      "require": "./dist/errors/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js"
    },
    "./ports": {
      "types": "./dist/ports/index.d.ts",
      "import": "./dist/ports/index.mjs",
      "require": "./dist/ports/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist *.tsbuildinfo",
    "type-check": "tsc --noEmit --pretty", 
    "test": "jest", 
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "ai",
    "webrtc",
    "realtime",
    "multimodal",
    "orga-ai",
    "core",
    "framework-agnostic"
  ],
  "author": "Orga AI",
  "license": "Proprietary",
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3"
  }
}

