{
  "name": "@orga-ai/widget",
  "version": "0.1.0",
  "main": "dist/init.global.js",
  "module": "dist/init.mjs",
  "types": "dist/init.d.ts",
  "exports": {
    ".": {
      "types": "./dist/init.d.ts",
      "import": "./dist/init.mjs",
      "default": "./dist/init.mjs"
    },
    "./init": {
      "types": "./dist/init.d.ts",
      "default": "./dist/init.mjs"
    },
    "./init.global": {
      "default": "./dist/init.global.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "build:cdn": "pnpm build && mkdir -p public && cp -r dist/* public/",
    "clean": "rm -rf dist lib build public *.tsbuildinfo",
    "type-check": "tsc --noEmit --pretty",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "Orga AI",
  "license": "Apache-2.0",
  "description": "Widget SDK for Orga AI â€” real-time multimodal AI that hears, sees, and speaks.",
  "homepage": "https://docs.orga-ai.com/docs/client-sdks/widget/introduction",
  "keywords": [
    "widget",
    "ai",
    "orga-ai"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@orga-ai/core": "workspace:*",
    "@orga-ai/react": "workspace:*"
  }
}
