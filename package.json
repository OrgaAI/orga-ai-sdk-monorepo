{
  "name": "orga-ai-sdk-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter='./packages/**'",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "prepare": "husky",
    "ci:version": "pnpm changeset version && pnpm install --no-frozen-lockfile",
    "ci:publish": "pnpm turbo run build --filter='./packages/**' && pnpm changeset publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsup": "^8.3.5",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "version": "0.0.1-test.0",
  "dependencies": {
    "@changesets/cli": "^2.29.7"
  }
}
